{
  "name": "expertly",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/*/frontend",
    "packages/*"
  ],
  "overrides": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0"
  },
  "scripts": {
    "dev": "docker-compose up",
    "dev:develop": "cd apps/develop && docker-compose up",
    "dev:define": "cd apps/define && npm run dev",
    "dev:manage": "cd apps/manage && docker-compose up",
    "dev:qa": "cd apps/qa && docker-compose up",
    "dev:salon": "cd apps/salon && docker-compose up",
    "dev:today": "cd apps/today && docker-compose up",
    "prepare": "husky",
    "typecheck:ui": "cd packages/ui && npx tsc --noEmit"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
