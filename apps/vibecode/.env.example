# Copy this to .env and fill in your values

# Your Anthropic API key
ANTHROPIC_API_KEY=sk-ant-...

# Server port (optional, defaults to 3001)
PORT=3001

# Remote server URL (optional - for hybrid mode)
# If set, widgets can choose to execute on this remote server
REMOTE_SERVER_URL=

# Default execution mode: 'local' or 'remote'
DEFAULT_EXECUTION_MODE=local
